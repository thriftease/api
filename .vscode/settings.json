{
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-Command", "poetry shell"]
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": ["/c", "poetry shell"],
            "icon": "terminal-cmd"
        },
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.importFormat": "relative",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit",
            "source.unusedImports": "always",
            "source.convertImportFormat": "explicit"
        }
    },
    "ruff.interpreter": ["python.exe"],
    "ruff.lint.args": ["--config=./ruff.toml"],
    "ruff.importStrategy": "fromEnvironment",
    "mypy-type-checker.interpreter": ["python.exe"],
    "mypy-type-checker.args": ["--config-file=./mypy.ini"],
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "mypy-type-checker.reportingScope": "workspace"
}